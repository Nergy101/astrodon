{
  "tasks": {
    "build": "deno run --allow-read --allow-write --allow-run build.ts",
    "dev": "deno run --allow-read --allow-write --allow-run --watch build.ts",
    "serve": "deno run --allow-read --allow-net --allow-run serve.ts",
    "watch-serve": "deno run --allow-read --allow-write --allow-net --allow-run --watch build.ts & deno run --allow-read --allow-net --allow-run serve.ts"
  },
  "imports": {
    "markdown": "https://deno.land/x/markdown@v2.2.1/mod.ts",
    "lua": "https://deno.land/x/lua@v0.0.1/mod.ts",
    "wasmoon": "npm:wasmoon@^1.16.0"
  }
}
